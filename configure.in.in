## lib configure.in.in

## initialize
@YAST2-INIT-COMMON@
@YAST2-INIT-PROGRAM@

## some common checks
@YAST2-CHECKS-COMMON@
@YAST2-CHECKS-PROGRAM@

AC_CHECK_LIB([util], [openpty],
	[:],
	AC_MSG_ERROR([libutil not found. please install glibc-devel]))

# check for openssl
AC_CHECK_LIB([crypto], [EVP_DigestInit_ex],
	[:],
	AC_MSG_ERROR([libcrypto not found. please install openssl-devel]))
AC_CHECK_LIB([ssl], [OpenSSL_add_all_digests],
	[OPENSSL_LIBS="`pkg-config --libs openssl` $OPENSSL_LIBS"],
	AC_MSG_ERROR([libssl not found. please install openssl-devel]))
AC_SUBST(OPENSSL_LIBS)

AC_ARG_ENABLE(debug,[  --enable-debug          debug msg for Rep ],[DEBUG_FLAGS="-DREP_DEBUG"])
AC_SUBST(DEBUG_FLAGS)

## and generate the output
@YAST2-OUTPUT@
